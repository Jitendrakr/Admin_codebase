<tr>
  <td><%=link_to (event.name),event_path(event)%></td>
  <td><%=event.event_type%></td>
  <td><%=event.description.truncate(50)%></td>
  <%if event.image_events.present?%>
    <td class="center"><%=image_tag event.image_events.first.picture,size: "50x50"%></td>
  <%else%>
    <td class="center">No Image Present yet.</td>
  <%end%>
  <td><%=link_to 'Manage Image',image_events_path(event.id)%></td>
  <td class="center"><%=link_to "Edit",edit_event_path(event)%>&nbsp;&nbsp;<%#= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
   <td> <%= check_box_tag('event_ids[]', event.id)%> </td>

</tr>