<div class="row" ></br>
  <% if @event.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" >Ã—</button>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <!-- <li><%#= message %></li> -->
            <% if message.include? "Admin" %>
              <% message.slice! "Admin " %>
            <% end %>
            <li><%= message.capitalize %></li></br>
          <% end %>
        </ul>
      </div>
    <% end %>
           <%= nested_form_for @event ,:html => {:class => "form-horizontal edit_event"} do |f| %>
  <div class="col-lg-12">
    <div class="panel panel-default" style="margin-top:50px;">
      <div class="panel-heading">
       Update events
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-5" style="margin-right:5px;">

              <div class="form-group" style="margin-left:10px;">
                <label>Name of event</label>
                <%= f.text_field :name, autofocus: true,:class=>"form-control"%>
              </div>
              <div class="form-group"style="margin-left:10px;">
                <label>Link</label>
                 <%= f.text_field :link, autofocus: true,:class=>"form-control" %>
              </div>
              <div class="form-group"style="margin-left:10px;">
                <label>Description</label>
                <%= f.text_area :description, autofocus: true,:class=>"form-control" %>
              </div>
            </div>
          <!-- /.col-lg-6 (nested) -->
          <div class="col-lg-5" style="margin-left:5px;">
            <div class="form-group">
                <label>Type of event</label>
                 <%= f.select(:event_type,['','Band','Road Show','Youthicon','Youth Lab','Youth Game'],{}, { :class => 'form-control' }) %>
              </div></br>
              <div class="form-group">
                <label>&nbsp&nbspShow on home page</label>
                <%= f.check_box :show %>
              </div>
            </div>

        </div>
         <%= f.submit 'Update Event',class: "btn btn-primary" %>
      </div>
      <!-- /.panel-body -->
    </div>
       <%end%>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<%= render 'layouts/javascript_validation' %>