<div class="ct h_mrgn">
   <div class="row">
      <div class="col7">
      <h2 style="font-size:22px;color: #36a501;"><img src="/assets/r.png">Events List</h2>
         <div class="tabBox1">
            <ul class="tabs1" style="margin-top:30px;">
               <li>
                 <h3 style="margin-left:10px; color:white;"><%=@events.count%> Events Found </h3>
               </li>
            </ul>
            <div class="tabContainer1">
               <div id="tab4" class="tabContent1">
                  <ul>
                     <li>
                        <!-- <div class="box pull-left" style="width: 658px;">
                           </div> -->
                        <div class="row" style="margin-left: 2px;background: white;width: 657px;">
                           <%if @events.blank?%>
                           <h3>No event available</h3>
                           <%else%>
                           <% @events.each do |f| %>
                           <div class="col-md-6" style=" border: 1px solid; border-color: #ccc;margin-left: -1px;height: 130px; ">
                              <div class="blog-post">
                               <div class="blog-thumb" >
                                  <%if f.image_events.present?%>
                                       <%=image_tag f.image_events.first.picture,size: "100x100",:style=>"float:right;margin-top: 3px;"%>
                                       <%end%>
                                 </div>
                                 <div class="blog-thumb" >
                                    <h3 style="margin-top:5px;font-size: 21px;color:#36a501;"><%=link_to"#{f.name}",event_path(f.name,f)%></h3>
                                 </div>

                                 <div class="blog-content">
                                    <div class="content-show">
                                       Event type: <%=f.event_type%>
                                    </div>
                                 </div>
                              </div>
                           </div>
                           <% end %>
                           <%end%>
                        </div>
                     </li>
                  </ul>
               </div>
            </div>
         </div>
      </div>
      <div class="que_form">
     <%=render'queries/form',:query => @query %>
   </div>
  </div>
</div>